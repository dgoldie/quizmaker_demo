%h1 Welcome to the QuizMaker Demo!
%p this is a demonstration....
%p
- if logged_in?
  = "Welcome #{ current_user.username}! Not you?"
  = link_to "Log out", logout_path
- else
  = link_to "Sign up", signup_path
  or
  = link_to "log in", login_path

%h3 Main Menu
%ul
  %li
    = link_to "Quizzes", quizzes_path
  %li
    = link_to "Questions", questions_path
  %li
    = link_to "Quiz Session", quiz_sessions_path


- if logged_in?
  %h3 Assigned Tests
  - if current_user.quiz_sessions
    %ul
    - for session in current_user.quiz_sessions
      %li
        =link_to session.quiz.name, take_quiz_path(session.quiz.id)
  - else
    %p No tests assigned yet.
